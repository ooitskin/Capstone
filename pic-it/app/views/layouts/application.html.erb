<!DOCTYPE html>
<html>
  <head>
    <title>Pic-It</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar-default">
      <div class="navbar-container">
        <div class="navbar-header">
          <div class="navbar-brand">
            <%= link_to "Pic-it", root_path, :class => 'brand'  %>

              <div >
                <ul class="nav navbar-nav">
                  <% if user_signed_in? %>
                    <li>
                      <%= link_to search_searches_path, class:'nav-buttons' do %>
                        <i class="material-icons search">search</i>
                      <% end %>
                    </li>
                    <li>
                      &nbsp;|&nbsp;
                      <%= link_to "New Post", new_post_path, class:'nav-buttons' %>&nbsp;|&nbsp;
                    </li>
                    <li>
                      <%= link_to "Logout", destroy_user_session_path, method: :delete, class:'nav-buttons' %>
                    </li>
                  <% else %>
                    <li>
                      <%= link_to "Login", new_user_session_path, class:'nav-buttons' %>&nbsp;|&nbsp;
                    </li>
                    <li>
                      <%= link_to "Register", new_user_registration_path, class:'nav-buttons' %>
                    </li>
                  <% end %>
                </ul>
              </div>

          </div>
        </div>
      </div>
    </nav>


    <%= yield %>
  </body>
</html>
