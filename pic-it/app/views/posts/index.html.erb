
<div class="posts-wrapper">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= post.user.user_name %>
        </div>
      </div>
      <div class="image">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
        <br>
        <%= link_to like_post_path(post), method: :put do %>
          <i class="material-icons">favorite</i>
          <%= post.get_upvotes.size %>
        <% end %>
      </div>
      <p class="caption">
      <strong><%= post.user.user_name %>:</strong>
        <%= post.caption %>
      </p>

      <div class="comments">
          <% if post.comments %>
            <% post.comments.each do |comment| %>
              <div class="comment">
                <div>
                  <span class='commentor'><%= comment.user.user_name %>:</span>
                  <span><%= comment.content %></span>
                  <% if post.user.id == current_user.id %>                  
                    <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
                      <i class="material-icons clear">clear</i>
                    <% end %>
                  <% elsif comment.user.user_name == current_user.user_name %>
                    <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } do %>
                      <i class="material-icons clear">clear</i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
          <br>
        <div class="comment-form">
          <%= form_for [post, post.comments.new] do |f| %>
            <%= f.text_field :content, placeholder: 'Add a comment...', class: "text-field"%>
          <% end %>
        </div>
      </div>
      
    </div>
  <% end %>
</div>
