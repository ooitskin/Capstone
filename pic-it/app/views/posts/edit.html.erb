<div class="text-center">
  <%= image_tag @post.image.url(:medium) %>
</div>
<div class="form-wrapper">
  <%= form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.text_field :caption %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
