<div class="form-wrapper">
  <%= form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.text_field :caption, placeholder: 'caption' %>
    </div>
    <div>
      <%= f.submit "Share Post" %>
    </div>
  <% end %>
</div>